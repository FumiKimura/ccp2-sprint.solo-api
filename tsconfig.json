{
   "compilerOptions": {
      "include" : [
         "src/**/*.ts"   /* Include every ts file in source folder */
     ],
     "exclude" : [
         "node_modules"  /* exclude everything in  node_modules */
     ],
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop":true,
   }
}